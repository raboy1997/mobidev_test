<div class="profile-block">
  <div class="panel text-center">
    <div class="user-heading"> <a href="#"><%= image_tag @user[:avatar_url] %></a>
      <h1><%= @user[:name] %></h1>
      <p><%= @user[:login] %></p>
    </div>
    <ul class="nav nav-pills nav-stacked">
      <li>company: <%= @user[:company] %></li>
      <li><i class="fa fa-pencil-square-o">blog:<a href="<%= @user[:blog] %>"> <%= @user[:blog] %></a></i></li>
      <li><i class="fa fa-usd" aria-hidden="true"></i>followers: <%= @user[:followers] %></li>
      <li><% if @favorite_user  %>
            <%= link_to  unfollow_user_path do %>
                <%= image_tag('Facebook_like_thumb.png',  :class => 'like') %>
                <i class="fa fa-pencil-square-o"> like </i>            <% end %>
        <% else %>
            <%= link_to follow_user_path do %>
                <%= image_tag('Not_facebook_dislike_thumbs_down.png',  :class => 'like') %>
                <i class="fa fa-pencil-square-o">unlike</i>
            <% end %>
        <% end %>

      </li>
    </ul>
  </div>
</div>